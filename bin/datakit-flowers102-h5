#!/usr/bin/env python
'''
Invoke the script to call converter
'''

from mldatakit.datasets import flowers102

(x_train, y_train, train_image_names), (x_val, y_val, val_image_names), \
        (x_test, y_test, test_image_names) = flowers102.load_data(expanded=True)
flowers102.h5_creator ('val.h5', x_val, val_image_names, y_val)
flowers102.h5_creator ('train.h5', x_train, train_image_names, y_train)
flowers102.h5_creator ('test.h5', x_test, test_image_names, y_test)